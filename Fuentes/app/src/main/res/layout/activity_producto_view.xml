<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProductoViewActivity"
    >

    <include layout="@layout/toolbar"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_prod"
        android:orientation="vertical">

        <TextView
            android:textStyle="bold"
            android:textSize="@dimen/tamanio_titulo_app"
            android:id="@+id/nombre_prod_view_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Segundo Activity"
            android:layout_gravity="center"
            android:gravity="center">
        </TextView>

        <ImageView
            android:id="@+id/imagen_prod_view"
            android:layout_marginTop="@dimen/margin_top_prod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ImageView>

        <TextView
            android:id="@+id/desc_prod_view_tv"
            android:layout_marginTop="@dimen/margin_top_prod"
            android:textSize="@dimen/tamanio_desc_prod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Precio:"
                android:layout_weight="1"
                android:textSize="@dimen/tamanio_titulo_app"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:id="@+id/precio_prod_view_tx"
                android:textColor="@color/colorAccent"
                android:layout_weight="1"
                android:textSize="@dimen/tamanio_titulo_app"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>